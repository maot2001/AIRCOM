        <section class="dataToShow" style="font-size:x-large">
            <div style="display: flex;">
                <div>Matricula: aaaaaaaa</div>
                <div>Estado: asadasdsd</div>
                <div>tipo: sssdddqqw</div>
            </div>
            <div>
                <div>Inicio: 10/10/2020</div>
                <div>Terminación: 10/10/2020</div>
                <div>Costo: $400</div>
            </div>
            @if (b)
            {
                <div>
                    <div style="flex:none;">@Calificacion(solicitud)</div>
                    <div style="background-color:lightgrey; padding:0.5%; border:solid;font-size:medium;">
                        <details>
                            <summary><strong>Leer Comentario: </strong></summary>
                            Poner aqui el comentario correspondiente si existe
                        </details>
                    </div>
                </div>
            }
            @if (!b)
            {
                <center>
                    <h3>No hay comentario</h3>
                </center>
